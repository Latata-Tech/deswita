<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Deswita" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fitsSystemWindows">false</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.Deswita.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.Deswita.NoActionBar.Fullscreen" parent="Theme.Deswita.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="FilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_main_chip</item>
        <item name="android:textColor">@color/surface_main_chip</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="chipStrokeColor">@color/stroke_main_chip</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="StarChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:width">20dp</item>
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:drawableStart">@drawable/bg_star_chip</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_round_white</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/blue_dark_second</item>
        <item name="colorAccent">@color/white</item>
    </style>

</resources>
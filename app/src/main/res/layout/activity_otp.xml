<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/sheetChangePassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet_round_white"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp">

    <TextView
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Masukkan 4 digit kode"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:text="Masukkan 4 digit kode yang anda terima pada email"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_marginHorizontal="30dp"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/et_otp1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext_otp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginEnd="10dp"
            tools:text="1" />

        <EditText
            android:id="@+id/et_otp2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext_otp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginEnd="10dp"
            tools:text="1" />

        <EditText
            android:id="@+id/et_otp3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext_otp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            tools:text="1" />

        <EditText
            android:id="@+id/et_otp4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext_otp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            tools:text="1" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerification"
        android:background="@drawable/bg_round_blue_dark"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:text="Verifikasi"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <ProgressBar
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>
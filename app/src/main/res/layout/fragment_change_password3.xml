<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/sheetChangePassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet_round_white"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Atur Ulang Kata Sandi"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:text="Atur ulang kata sandi baru untuk akun anda, untuk masuk dan akses aplikasi "
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:drawableTint="@color/black"
        android:hint="Kata sandi" />


    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:drawableTint="@color/black"
        android:hint="Konfimasi Kata sandi" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:background="@drawable/bg_round_blue_dark"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:text="Simpan"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

</LinearLayout>